<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="container">
      <h1>Edit</h1>

      <form method="POST"
        action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" >

        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]"
          value="<%= comment.text%>">
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-large">Submit</button>
        </div>

      </form>

      <a href="/campgrounds">Back to all campgrounds</a>

    </div>
  </div>
</div>
<% include ../partials/footer %>
