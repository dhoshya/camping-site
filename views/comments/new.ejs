<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="container">
      <h1>Add new Comment to <%= campground.name %></h1>

      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">

        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-large">Submit</button>
        </div>

      </form>

      <a href="/campgrounds">Back to all campgrounds</a>

    </div>
  </div>
</div>
<% include ../partials/footer %>
