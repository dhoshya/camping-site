<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="container">
      <h1>Create a new campground</h1>

      <form action="/campgrounds" method="POST">

        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="name">
        </div>

        <div class="form-group">
          <input class="form-control" type="text" name="image"
          placeholder="image url">
        </div>

        <div class="form-group">
          <input class="form-control" type="text" name="description"
          placeholder="enter the some description for this campsite">
        </div>

        <div class="form-group">
          <input class="form-control" type="number" name="price" min="0.01"
          step="0.01" placeholder="enter the price this campsite">
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-large">Submit</button>
        </div>

      </form>

      <a href="/campgrounds">Back to all campgrounds</a>

    </div>
  </div>
</div>
<% include ../partials/footer %>
